FROM node:20-alpine AS builder

# Install pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

WORKDIR /app

# Copy workspace configuration and ALL source first
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY tsconfig.base.json ./
COPY apps/api ./apps/api
COPY packages ./packages

# Debug: check what's in packages/schemas before install
RUN ls -la packages/schemas/

# Install dependencies - this creates workspace symlinks
RUN pnpm install --frozen-lockfile

# Debug: check what's in packages/schemas after install
RUN ls -la packages/schemas/

# Build schemas with verbose output
RUN cd packages/schemas && npx tsc -p ./tsconfig.json --listEmittedFiles

# Debug: verify dist was created
RUN ls -la packages/schemas/ && ls -la packages/schemas/dist/

# Build other packages
RUN cd packages/types && pnpm run build
RUN cd packages/validation && pnpm run build
RUN cd packages/shared && pnpm run build || true

# Build API
RUN cd apps/api && pnpm run build

# --- Production Stage ---
FROM node:20-alpine AS runner

RUN corepack enable && corepack prepare pnpm@latest --activate

WORKDIR /app

COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/package.json ./
COPY --from=builder /app/pnpm-workspace.yaml ./
COPY --from=builder /app/apps/api/dist ./apps/api/dist
COPY --from=builder /app/apps/api/package.json ./apps/api/
COPY --from=builder /app/apps/api/node_modules ./apps/api/node_modules
COPY --from=builder /app/packages ./packages

ENV NODE_ENV=production
ENV PORT=3000

CMD ["node", "apps/api/dist/src/main.js"]
