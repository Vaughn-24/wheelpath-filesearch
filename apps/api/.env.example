# WheelPath AI - API Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# Google Cloud Platform
# ===========================================
GCP_PROJECT=wheelpath-filesearch
GCP_LOCATION=us-central1
GCS_BUCKET_NAME=wheelpath-uploads-dev

# ===========================================
# AI Services
# ===========================================
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# ===========================================
# Vertex AI Vector Search
# ===========================================
VERTEX_INDEX_ENDPOINT_ID=your-endpoint-id
VERTEX_DEPLOYED_INDEX_ID=your-deployed-index-id
VERTEX_PUBLIC_ENDPOINT_DOMAIN=your-public-endpoint.vdb.vertexai.goog

# ===========================================
# Admin Access
# ===========================================
# Used for /admin/metrics endpoint
ADMIN_API_KEY=your-secure-admin-key

# ===========================================
# Development Only
# ===========================================
NODE_ENV=development
PORT=8080
