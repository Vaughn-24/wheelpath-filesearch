rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Documents collection - tenant-scoped
    match /documents/{document} {
      allow read, write: if request.auth != null 
        && request.auth.uid == resource.data.tenantId;
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.tenantId;
    }
    
    // Tenants collection - for File Search Store references
    match /tenants/{tenantId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == tenantId;
    }
    
    // Chats collection - tenant-scoped
    match /chats/{chat} {
      allow read, write: if request.auth != null;
    }
  }
}
